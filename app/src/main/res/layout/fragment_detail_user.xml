<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_green_light"
    tools:showIn="@layout/activity_detail_user"
    tools:context="uno.wayw.DetailUserActivityFragment">

    <TextView
    android:id="@+id/contactTitle"
    android:textSize="20dp"
    android:text="Friend Details"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/friendDetailUsername"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:id= "@+id/friendGenre"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/friendDetailUsername"
        android:layout_alignStart="@+id/friendDetailUsername"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendDetailImage"
        android:layout_below="@+id/friendGenre"
        android:layout_alignStart="@+id/friendGenre"
        android:layout_marginTop="32dp"/>

</RelativeLayout>
